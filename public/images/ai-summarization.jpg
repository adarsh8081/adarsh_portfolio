    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#f8f9ff;stop-opacity:0.9" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Floating elements -->
  <circle cx="150" cy="100" r="30" fill="#ffffff" opacity="0.2"/>
  <circle cx="650" cy="150" r="20" fill="#ffffff" opacity="0.3"/>
  <circle cx="700" cy="400" r="25" fill="#ffffff" opacity="0.2"/>
  
  <!-- Main card -->
  <rect x="100" y="150" width="600" height="200" rx="20" fill="url(#card)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- AI Brain icon -->
  <g transform="translate(150, 200)">
    <circle cx="40" cy="40" r="35" fill="#667eea" opacity="0.8"/>
    <path d="M20 30 Q40 15 60 30 Q55 45 40 50 Q25 45 20 30" fill="#ffffff"/>
    <circle cx="35" cy="35" r="3" fill="#667eea"/>
    <circle cx="45" cy="35" r="3" fill="#667eea"/>
  </g>
  
  <!-- Document icon -->
  <g transform="translate(300, 200)">
    <rect x="0" y="0" width="40" height="50" rx="5" fill="#764ba2" opacity="0.8"/>
    <rect x="5" y="10" width="30" height="2" fill="#ffffff"/>
    <rect x="5" y="15" width="25" height="2" fill="#ffffff"/>
    <rect x="5" y="20" width="30" height="2" fill="#ffffff"/>
    <rect x="5" y="25" width="20" height="2" fill="#ffffff"/>
  </g>
  
  <!-- Video icon -->
  <g transform="translate(450, 200)">
    <rect x="0" y="0" width="50" height="35" rx="5" fill="#667eea" opacity="0.8"/>
    <polygon points="15,10 15,25 35,17.5" fill="#ffffff"/>
  </g>
  
  <!-- Text -->
  <text x="400" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#333333">AI Summarization System</text>
  <text x="400" y="310" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#666666">Multi-format intelligent content processing</text>
  
  <!-- Decorative elements -->
  <rect x="120" y="170" width="4" height="30" fill="#667eea" opacity="0.6"/>
