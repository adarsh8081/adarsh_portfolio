<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2ecc71;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#27ae60;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#f8fff8;stop-opacity:0.9" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Floating elements -->
  <circle cx="150" cy="100" r="25" fill="#ffffff" opacity="0.3"/>
  <circle cx="650" cy="120" r="20" fill="#ffffff" opacity="0.2"/>
  <circle cx="700" cy="400" r="30" fill="#ffffff" opacity="0.25"/>
  
  <!-- Main card -->
  <rect x="100" y="150" width="600" height="200" rx="20" fill="url(#card)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- Recycling symbol -->
  <g transform="translate(200, 200)">
    <circle cx="30" cy="30" r="25" fill="#2ecc71" opacity="0.8"/>
    <path d="M15 20 L45 20 L45 40 L15 40 Z" fill="#ffffff"/>
    <path d="M20 25 L40 25 L40 35 L20 35 Z" fill="#2ecc71"/>
    <path d="M25 15 L35 15 L35 45 L25 45 Z" fill="#ffffff"/>
  </g>
  
  <!-- Electronic devices -->
  <g transform="translate(350, 180)">
    <!-- Phone -->
    <rect x="0" y="0" width="25" height="40" rx="3" fill="#34495e" opacity="0.8"/>
    <rect x="2" y="2" width="21" height="36" rx="2" fill="#2c3e50"/>
    <rect x="5" y="5" width="15" height="25" fill="#27ae60" opacity="0.6"/>
    
    <!-- Laptop -->
    <rect x="40" y="10" width="50" height="30" rx="2" fill="#95a5a6" opacity="0.8"/>
    <rect x="42" y="12" width="46" height="26" fill="#2c3e50"/>
    <rect x="45" y="15" width="40" height="20" fill="#27ae60" opacity="0.6"/>
    
    <!-- Tablet -->
    <rect x="100" y="5" width="35" height="45" rx="3" fill="#7f8c8d" opacity="0.8"/>
    <rect x="102" y="7" width="31" height="41" rx="2" fill="#2c3e50"/>
    <rect x="105" y="10" width="25" height="35" fill="#27ae60" opacity="0.6"/>
  </g>
  
  <!-- Text -->
  <text x="400" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#2c3e50">E-Waste Management</text>
  <text x="400" y="310" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#7f8c8d">Sustainable technology solutions</text>
  
  <!-- Decorative elements -->
  <rect x="120" y="170" width="4" height="30" fill="#2ecc71" opacity="0.6"/>
  <rect x="120" y="170" width="30" height="4" fill="#2ecc71" opacity="0.6"/>
  <rect x="650" y="170" width="4" height="30" fill="#27ae60" opacity="0.6"/>
  <rect x="636" y="170" width="30" height="4" fill="#27ae60" opacity="0.6"/>
</svg>
