# Environment Configuration for Portfolio Project
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (for production)
DATABASE_URL=postgresql://portfolio_user:portfolio_password@localhost:5432/portfolio

# SQLite Database Path (for development)
DATABASE_PATH=../server/prisma/dev.db

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Node.js API Server
API_BASE_URL=http://localhost:4000
PORT=4000


# Frontend URL
FRONTEND_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT Secret Key (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Auth0 Configuration (if using Auth0)
AUTH0_SECRET=your-auth0-secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_TO=your-email@gmail.com


# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:4000,https://your-domain.vercel.app

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database URL
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_portfolio

# Test API URLs
TEST_API_URL=http://localhost:4000
TEST_FRONTEND_URL=http://localhost:3000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Google Analytics
NEXT_PUBLIC_GA_ID=your-ga-id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Cache TTL (in seconds)
CACHE_TTL=3600

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Upload directory
UPLOAD_DIR=uploads
