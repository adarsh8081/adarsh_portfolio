generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  image       String?
  tech        Json
  tags        Json
  createdAt   DateTime @default(now())
}

model Post {
  id      Int      @id @default(autoincrement())
  slug    String   @unique
  title   String
  summary String
  content String
  date    DateTime
  tags    Json
}

model Service {
  id          Int    @id @default(autoincrement())
  slug        String @unique
  title       String
  description String
  price       Int?
}

model Skill {
  id       Int    @id @default(autoincrement())
  name     String
  level    Int
  category String
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  company   String?
  content   String
  rating    Int      @default(5)
  avatar    String?
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Achievement {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  icon        String?
  category    String // "award", "certification", "milestone", "recognition"
  date        DateTime
  url         String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model TimelineEvent {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  type        String // "work", "education", "project", "achievement"
  location    String?
  company     String?
  url         String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      String   @default("user") // "admin", "editor", "user"
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
