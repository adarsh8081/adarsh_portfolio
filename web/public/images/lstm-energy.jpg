<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6b6b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ee5a24;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#fff5f5;stop-opacity:0.9" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Floating elements -->
  <circle cx="150" cy="100" r="30" fill="#ffffff" opacity="0.2"/>
  <circle cx="650" cy="150" r="25" fill="#ffffff" opacity="0.3"/>
  <circle cx="700" cy="400" r="20" fill="#ffffff" opacity="0.25"/>
  
  <!-- Main card -->
  <rect x="100" y="150" width="600" height="200" rx="20" fill="url(#card)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- Neural network visualization -->
  <g transform="translate(200, 200)">
    <!-- Input layer -->
    <circle cx="20" cy="20" r="8" fill="#ff6b6b" opacity="0.8"/>
    <circle cx="20" cy="40" r="8" fill="#ff6b6b" opacity="0.8"/>
    <circle cx="20" cy="60" r="8" fill="#ff6b6b" opacity="0.8"/>
    
    <!-- Hidden layer -->
    <circle cx="60" cy="15" r="8" fill="#ee5a24" opacity="0.8"/>
    <circle cx="60" cy="35" r="8" fill="#ee5a24" opacity="0.8"/>
    <circle cx="60" cy="55" r="8" fill="#ee5a24" opacity="0.8"/>
    <circle cx="60" cy="75" r="8" fill="#ee5a24" opacity="0.8"/>
    
    <!-- Output layer -->
    <circle cx="100" cy="30" r="8" fill="#ff6b6b" opacity="0.8"/>
    <circle cx="100" cy="50" r="8" fill="#ff6b6b" opacity="0.8"/>
    
    <!-- Connections -->
    <line x1="28" y1="20" x2="52" y2="15" stroke="#ff6b6b" stroke-width="2" opacity="0.6"/>
    <line x1="28" y1="40" x2="52" y2="35" stroke="#ff6b6b" stroke-width="2" opacity="0.6"/>
    <line x1="28" y1="60" x2="52" y2="55" stroke="#ff6b6b" stroke-width="2" opacity="0.6"/>
    <line x1="68" y1="15" x2="92" y2="30" stroke="#ee5a24" stroke-width="2" opacity="0.6"/>
    <line x1="68" y1="35" x2="92" y2="50" stroke="#ee5a24" stroke-width="2" opacity="0.6"/>
  </g>
  
  <!-- Energy chart -->
  <g transform="translate(400, 180)">
    <rect x="0" y="0" width="200" height="120" rx="10" fill="#f8f9fa" stroke="#dee2e6" stroke-width="1"/>
    <polyline points="20,100 40,80 60,90 80,70 100,75 120,60 140,65 160,50 180,55" 
              stroke="#ff6b6b" stroke-width="3" fill="none"/>
    <text x="100" y="140" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666666">Energy Prediction</text>
  </g>
  
  <!-- Text -->
  <text x="400" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#2c3e50">LSTM Energy Predictor</text>
  <text x="400" y="310" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#7f8c8d">Advanced neural network forecasting</text>
  
  <!-- Decorative elements -->
  <rect x="120" y="170" width="4" height="30" fill="#ff6b6b" opacity="0.6"/>
  <rect x="120" y="170" width="30" height="4" fill="#ff6b6b" opacity="0.6"/>
  <rect x="650" y="170" width="4" height="30" fill="#ee5a24" opacity="0.6"/>
  <rect x="636" y="170" width="30" height="4" fill="#ee5a24" opacity="0.6"/>
</svg>
