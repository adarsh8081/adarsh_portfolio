<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f59e0b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#fffbeb;stop-opacity:0.9" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Floating performance elements -->
  <g transform="translate(100, 80)">
    <rect x="0" y="0" width="25" height="25" fill="#ffffff" opacity="0.3"/>
    <rect x="5" y="5" width="15" height="15" fill="#f59e0b" opacity="0.5"/>
  </g>
  <g transform="translate(650, 120)">
    <circle cx="0" cy="0" r="20" fill="#ffffff" opacity="0.2"/>
    <circle cx="0" cy="0" r="10" fill="#d97706" opacity="0.4"/>
  </g>
  
  <!-- Main card -->
  <rect x="100" y="150" width="600" height="200" rx="20" fill="url(#card)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- Performance metrics -->
  <g transform="translate(200, 200)">
    <!-- Speedometer -->
    <g transform="translate(0, 0)">
      <circle cx="30" cy="30" r="25" fill="#f59e0b" opacity="0.8"/>
      <path d="M15 30 A15 15 0 0 1 45 30" stroke="#ffffff" stroke-width="4" fill="none"/>
      <line x1="30" y1="30" x2="30" y2="15" stroke="#ffffff" stroke-width="3"/>
      <text x="30" y="50" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="#ffffff">95%</text>
    </g>
  </g>
  
  <!-- Performance chart -->
  <g transform="translate(400, 180)">
    <rect x="0" y="0" width="200" height="120" rx="10" fill="#f8f9fa" stroke="#dee2e6" stroke-width="1"/>
    
    <!-- Before/After comparison -->
    <text x="20" y="20" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="#1f2937">Performance Metrics</text>
    
    <!-- Before -->
    <text x="20" y="40" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">Before:</text>
    <rect x="20" y="45" width="60" height="8" rx="2" fill="#ef4444" opacity="0.8"/>
    <text x="90" y="52" font-family="Arial, sans-serif" font-size="8" fill="#6b7280">2.5s load time</text>
    
    <!-- After -->
    <text x="20" y="65" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">After:</text>
    <rect x="20" y="70" width="20" height="8" rx="2" fill="#10b981" opacity="0.8"/>
    <text x="50" y="77" font-family="Arial, sans-serif" font-size="8" fill="#6b7280">0.8s load time</text>
    
    <!-- Optimization indicators -->
    <circle cx="30" cy="95" r="3" fill="#10b981"/>
    <text x="40" y="100" font-family="Arial, sans-serif" font-size="8" fill="#6b7280">Code splitting</text>
    
    <circle cx="30" cy="110" r="3" fill="#10b981"/>
    <text x="40" y="115" font-family="Arial, sans-serif" font-size="8" fill="#6b7280">Image optimization</text>
  </g>
  
  <!-- Text -->
  <text x="400" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#1e293b">Performance Optimization</text>
  <text x="400" y="310" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#64748b">Speed, scalability & efficiency</text>
  
  <!-- Decorative elements -->
  <rect x="120" y="170" width="4" height="30" fill="#f59e0b" opacity="0.6"/>
  <rect x="120" y="170" width="30" height="4" fill="#f59e0b" opacity="0.6"/>
  <rect x="650" y="170" width="4" height="30" fill="#d97706" opacity="0.6"/>
  <rect x="636" y="170" width="30" height="4" fill="#d97706" opacity="0.6"/>
</svg>
