<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8b5cf6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#faf5ff;stop-opacity:0.9" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Floating AI elements -->
  <g transform="translate(100, 80)">
    <circle cx="0" cy="0" r="25" fill="#ffffff" opacity="0.2"/>
    <circle cx="0" cy="0" r="15" fill="#8b5cf6" opacity="0.3"/>
    <circle cx="0" cy="0" r="5" fill="#ffffff" opacity="0.5"/>
  </g>
  <g transform="translate(650, 120)">
    <rect x="0" y="0" width="30" height="30" fill="#ffffff" opacity="0.2" transform="rotate(45 15 15)"/>
  </g>
  
  <!-- Main card -->
  <rect x="100" y="150" width="600" height="200" rx="20" fill="url(#card)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- AI/ML elements -->
  <g transform="translate(200, 200)">
    <!-- Neural network -->
    <g transform="translate(0, 0)">
      <!-- Input layer -->
      <circle cx="20" cy="20" r="8" fill="#8b5cf6" opacity="0.8"/>
      <circle cx="20" cy="40" r="8" fill="#8b5cf6" opacity="0.8"/>
      <circle cx="20" cy="60" r="8" fill="#8b5cf6" opacity="0.8"/>
      
      <!-- Hidden layer -->
      <circle cx="60" cy="15" r="8" fill="#7c3aed" opacity="0.8"/>
      <circle cx="60" cy="35" r="8" fill="#7c3aed" opacity="0.8"/>
      <circle cx="60" cy="55" r="8" fill="#7c3aed" opacity="0.8"/>
      <circle cx="60" cy="75" r="8" fill="#7c3aed" opacity="0.8"/>
      
      <!-- Output layer -->
      <circle cx="100" cy="30" r="8" fill="#8b5cf6" opacity="0.8"/>
      <circle cx="100" cy="50" r="8" fill="#8b5cf6" opacity="0.8"/>
      
      <!-- Connections -->
      <line x1="28" y1="20" x2="52" y2="15" stroke="#8b5cf6" stroke-width="2" opacity="0.6"/>
      <line x1="28" y1="40" x2="52" y2="35" stroke="#8b5cf6" stroke-width="2" opacity="0.6"/>
      <line x1="28" y1="60" x2="52" y2="55" stroke="#8b5cf6" stroke-width="2" opacity="0.6"/>
      <line x1="68" y1="15" x2="92" y2="30" stroke="#7c3aed" stroke-width="2" opacity="0.6"/>
      <line x1="68" y1="35" x2="92" y2="50" stroke="#7c3aed" stroke-width="2" opacity="0.6"/>
    </g>
  </g>
  
  <!-- Data visualization -->
  <g transform="translate(400, 180)">
    <rect x="0" y="0" width="200" height="120" rx="10" fill="#f8f9fa" stroke="#dee2e6" stroke-width="1"/>
    
    <!-- Chart -->
    <rect x="20" y="80" width="160" height="30" fill="#e5e7eb"/>
    <rect x="20" y="70" width="20" height="40" fill="#8b5cf6" opacity="0.8"/>
    <rect x="50" y="60" width="20" height="50" fill="#7c3aed" opacity="0.8"/>
    <rect x="80" y="50" width="20" height="60" fill="#8b5cf6" opacity="0.8"/>
    <rect x="110" y="40" width="20" height="70" fill="#7c3aed" opacity="0.8"/>
    <rect x="140" y="30" width="20" height="80" fill="#8b5cf6" opacity="0.8"/>
    <rect x="170" y="20" width="20" height="90" fill="#7c3aed" opacity="0.8"/>
    
    <text x="100" y="15" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#6b7280">ML Model Performance</text>
  </g>
  
  <!-- Text -->
  <text x="400" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#1e293b">AI/ML Solutions</text>
  <text x="400" y="310" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#64748b">Intelligent automation & insights</text>
  
  <!-- Decorative elements -->
  <rect x="120" y="170" width="4" height="30" fill="#8b5cf6" opacity="0.6"/>
  <rect x="120" y="170" width="30" height="4" fill="#8b5cf6" opacity="0.6"/>
  <rect x="650" y="170" width="4" height="30" fill="#7c3aed" opacity="0.6"/>
  <rect x="636" y="170" width="30" height="4" fill="#7c3aed" opacity="0.6"/>
</svg>
