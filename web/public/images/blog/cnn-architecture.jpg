<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4834d4;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#686de0;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#f8f9ff;stop-opacity:0.9" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Floating elements -->
  <circle cx="150" cy="100" r="25" fill="#ffffff" opacity="0.2"/>
  <circle cx="650" cy="120" r="30" fill="#ffffff" opacity="0.3"/>
  <circle cx="700" cy="400" r="20" fill="#ffffff" opacity="0.25"/>
  
  <!-- Main card -->
  <rect x="100" y="150" width="600" height="200" rx="20" fill="url(#card)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- CNN Architecture -->
  <g transform="translate(200, 200)">
    <!-- Input image -->
    <rect x="0" y="20" width="40" height="40" fill="#4834d4" opacity="0.8"/>
    <rect x="2" y="22" width="36" height="36" fill="#ffffff"/>
    <rect x="4" y="24" width="32" height="32" fill="#686de0" opacity="0.6"/>
    
    <!-- Convolutional layers -->
    <rect x="60" y="10" width="30" height="30" fill="#4834d4" opacity="0.7"/>
    <rect x="60" y="40" width="30" height="30" fill="#4834d4" opacity="0.7"/>
    <rect x="60" y="70" width="30" height="30" fill="#4834d4" opacity="0.7"/>
    
    <!-- Pooling layer -->
    <rect x="110" y="30" width="25" height="25" fill="#686de0" opacity="0.8"/>
    <rect x="110" y="60" width="25" height="25" fill="#686de0" opacity="0.8"/>
    
    <!-- Fully connected -->
    <rect x="150" y="20" width="20" height="20" fill="#4834d4" opacity="0.6"/>
    <rect x="150" y="45" width="20" height="20" fill="#4834d4" opacity="0.6"/>
    <rect x="150" y="70" width="20" height="20" fill="#4834d4" opacity="0.6"/>
    
    <!-- Output -->
    <rect x="190" y="40" width="15" height="15" fill="#4834d4" opacity="0.8"/>
    
    <!-- Arrows -->
    <path d="M45 40 L55 40" stroke="#4834d4" stroke-width="2" marker-end="url(#arrowhead)"/>
    <path d="M95 25 L105 25" stroke="#4834d4" stroke-width="2" marker-end="url(#arrowhead)"/>
    <path d="M140 42.5 L145 42.5" stroke="#4834d4" stroke-width="2" marker-end="url(#arrowhead)"/>
    <path d="M175 50 L185 50" stroke="#4834d4" stroke-width="2" marker-end="url(#arrowhead)"/>
  </g>
  
  <!-- Image classification examples -->
  <g transform="translate(400, 180)">
    <rect x="0" y="0" width="200" height="120" rx="10" fill="#f8f9fa" stroke="#dee2e6" stroke-width="1"/>
    <rect x="20" y="20" width="30" height="30" fill="#4834d4" opacity="0.3"/>
    <text x="35" y="65" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#666666">Cat</text>
    
    <rect x="70" y="20" width="30" height="30" fill="#686de0" opacity="0.3"/>
    <text x="85" y="65" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#666666">Dog</text>
    
    <rect x="120" y="20" width="30" height="30" fill="#4834d4" opacity="0.3"/>
    <text x="135" y="65" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#666666">Car</text>
    
    <rect x="170" y="20" width="30" height="30" fill="#686de0" opacity="0.3"/>
    <text x="185" y="65" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#666666">Tree</text>
    
    <text x="100" y="100" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666666">Multi-class Classification</text>
  </g>
  
  <!-- Text -->
  <text x="400" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#2c3e50">CNN Image Classifier</text>
  <text x="400" y="310" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#7f8c8d">Deep learning computer vision</text>
  
  <!-- Decorative elements -->
  <rect x="120" y="170" width="4" height="30" fill="#4834d4" opacity="0.6"/>
  <rect x="120" y="170" width="30" height="4" fill="#4834d4" opacity="0.6"/>
  <rect x="650" y="170" width="4" height="30" fill="#686de0" opacity="0.6"/>
  <rect x="636" y="170" width="30" height="4" fill="#686de0" opacity="0.6"/>
</svg>
