<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#06b6d4;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0891b2;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#f0fdfa;stop-opacity:0.9" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Floating document elements -->
  <g transform="translate(100, 80)">
    <rect x="0" y="0" width="30" height="30" fill="#ffffff" opacity="0.3"/>
    <rect x="5" y="5" width="20" height="20" fill="#06b6d4" opacity="0.5"/>
  </g>
  <g transform="translate(650, 120)">
    <rect x="0" y="0" width="25" height="25" fill="#ffffff" opacity="0.2"/>
    <rect x="3" y="3" width="19" height="19" fill="#0891b2" opacity="0.4"/>
  </g>
  
  <!-- Main card -->
  <rect x="100" y="150" width="600" height="200" rx="20" fill="url(#card)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- Writing elements -->
  <g transform="translate(200, 200)">
    <!-- Document -->
    <rect x="0" y="0" width="80" height="100" rx="5" fill="#f8f9fa" stroke="#dee2e6" stroke-width="1"/>
    <rect x="5" y="5" width="70" height="90" fill="#ffffff"/>
    
    <!-- Text lines -->
    <rect x="10" y="10" width="60" height="3" rx="1" fill="#06b6d4" opacity="0.8"/>
    <rect x="10" y="18" width="50" height="2" rx="1" fill="#6b7280" opacity="0.6"/>
    <rect x="10" y="25" width="55" height="2" rx="1" fill="#6b7280" opacity="0.6"/>
    <rect x="10" y="32" width="45" height="2" rx="1" fill="#6b7280" opacity="0.6"/>
    <rect x="10" y="39" width="60" height="2" rx="1" fill="#6b7280" opacity="0.6"/>
    <rect x="10" y="46" width="40" height="2" rx="1" fill="#6b7280" opacity="0.6"/>
    
    <!-- Code block -->
    <rect x="10" y="55" width="60" height="25" rx="2" fill="#1f2937"/>
    <text x="15" y="65" font-family="monospace" font-size="6" fill="#06b6d4">function example() {</text>
    <text x="15" y="72" font-family="monospace" font-size="6" fill="#d4d4d4">  return "Hello World";</text>
    <text x="15" y="79" font-family="monospace" font-size="6" fill="#06b6d4">}</text>
  </g>
  
  <!-- Writing tools -->
  <g transform="translate(400, 180)">
    <rect x="0" y="0" width="200" height="120" rx="10" fill="#f8f9fa" stroke="#dee2e6" stroke-width="1"/>
    
    <!-- Writing types -->
    <text x="20" y="20" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="#1f2937">Documentation Types</text>
    
    <circle cx="20" cy="40" r="3" fill="#06b6d4"/>
    <text x="30" y="45" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">API Documentation</text>
    
    <circle cx="20" cy="55" r="3" fill="#0891b2"/>
    <text x="30" y="60" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">Technical Tutorials</text>
    
    <circle cx="20" cy="70" r="3" fill="#06b6d4"/>
    <text x="30" y="75" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">User Guides</text>
    
    <circle cx="20" cy="85" r="3" fill="#0891b2"/>
    <text x="30" y="90" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">Code Comments</text>
    
    <circle cx="20" cy="100" r="3" fill="#06b6d4"/>
    <text x="30" y="105" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">README Files</text>
  </g>
  
  <!-- Text -->
  <text x="400" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#1e293b">Technical Writing</text>
  <text x="400" y="310" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#64748b">Clear & comprehensive documentation</text>
  
  <!-- Decorative elements -->
  <rect x="120" y="170" width="4" height="30" fill="#06b6d4" opacity="0.6"/>
  <rect x="120" y="170" width="30" height="4" fill="#06b6d4" opacity="0.6"/>
  <rect x="650" y="170" width="4" height="30" fill="#0891b2" opacity="0.6"/>
  <rect x="636" y="170" width="30" height="4" fill="#0891b2" opacity="0.6"/>
</svg>
